<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <ImageView
        android:id="@+id/image_touxiang"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/ic_logo"
         />

    <Button
        android:id="@+id/btn_changeHead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:text="更换头像"
        android:background="@drawable/image_shape"
        app:layout_constraintTop_toBottomOf="@+id/image_touxiang"
        />

    <EditText
        android:id="@+id/change_nickname"
        android:hint=" 修改昵称"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/edit_shape"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_changeHead"
        />


    <EditText
         android:id="@+id/change_psd"
         android:hint=" 修改密码"
         android:layout_width="match_parent"
         android:layout_height="40dp"
         android:textSize="20dp"
         android:layout_marginTop="20dp"
         android:background="@drawable/edit_shape"
         android:layout_marginLeft="40dp"
         android:layout_marginRight="40dp"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintTop_toBottomOf="@id/change_nickname"
         />

    <EditText
    android:id="@+id/change_psd2"
    android:hint=" 确认密码"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:textSize="20dp"
    android:layout_marginTop="20dp"
    android:background="@drawable/edit_shape"
    android:layout_marginLeft="40dp"
    android:layout_marginRight="40dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/change_psd"
    />

    <Button
        android:id="@+id/btn_change_psd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:text="确认更改"
        android:background="@drawable/image_shape"
        app:layout_constraintTop_toBottomOf="@+id/change_psd2"
        />

</androidx.constraintlayout.widget.ConstraintLayout>